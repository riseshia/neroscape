<div class="row">
  <div class="col-lg-10 col-lg-offset-1">
    <h1>ゲーム一覧</h1>

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>会社</th>
          <th>発売日</th>
          <th>カテゴリー</th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= link_to game.title, game %></td>
            <td><%= link_to game.brand_name, game.brand %></td>
            <td><%= game.release_date %></td>
            <td><%= categories_tag game.categories %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <div class="text-center">
      <%= paginate @games %>
    </div>
  </div>
</div>

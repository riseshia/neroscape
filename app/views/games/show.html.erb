<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @game.title %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @game.brand.name %>
</p>

<p>
  <strong>Release date:</strong>
  <%= @game.release_date %>
</p>

<p>
  <strong>Price:</strong>
  <%= @game.price %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @game.genre %>
</p>

<p>
  <strong>Subgenre:</strong>
  <% @game.subgenres.each do |sg| %>
  <%= sg.name + ' ' %>
  <% end %>
</p>

<p>
  <strong>Category:</strong>
  <% @game.categories.each do |ct| %>
  <%= ct.name + ' ' %>
  <% end %>
</p>

<p>
  <strong>Gennga:</strong>
  <% @game.gennga(@roles).each do |cr| %>
  <%= cr.name + ' ' %>
  <% end %>
</p>

<p>
  <strong>SDGennga:</strong>
  <% @game.sdgennga(@roles).each do |cr| %>
  <%= cr.name + ' ' %>
  <% end %>
</p>

<p>
  <strong>Writer:</strong>
  <% @game.writer(@roles).each do |cr| %>
  <%= cr.name + ' ' %>
  <% end %>
</p>

<p>
  <strong>Story:</strong>
  <%= @game.story %>
</p>

<p>
  <strong>Charaters:</strong><br>
  <% @game.characters.each do |ch| %>
  <%= character_info(ch).html_safe %><br>
  <% end %>
</p>

<p>
  <%= link_to 'Go to Getchu', "http://www.getchu.com/soft.phtml?id=#{@game.getchu_id}" %>
</p>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>

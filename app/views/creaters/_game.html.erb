<% if @joins.size != 0 %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Sellday</th>
      <th>Model</th>
    </tr>
  </thead>

  <tbody>
    <% @joins.each do |join| %>
      <tr>
        <td><%= link_to join.game.name, join.game %> <%=role_explain(join) %></td>
        <td><%= join.game.sellday %></td>
        <td><%= join.game.model %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
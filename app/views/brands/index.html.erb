<h1>Listing brands</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Furigana</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td><%= link_to brand.name, brand %></td>
        <td><%= brand.furigana %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @brands %>
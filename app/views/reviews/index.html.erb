<p id="notice"><%= notice %></p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Score</th>
      <th>Content</th>
      <th>User</th>
      <th>Game</th>
      <th>Reviewed</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.score %></td>
        <td><%= review.content %></td>
        <td><%= review.user_id %></td>
        <td><%= review.game_id %></td>
        <td><%= review.reviewed %></td>
        <td><%= link_to 'Show', review %></td>
        <% if review.editable? current_user %>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

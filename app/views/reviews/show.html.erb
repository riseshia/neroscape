<p>
  <strong>User:</strong>
  <%= @review.user.name %>
</p>

<p>
  <strong>Game:</strong>
  <%= link_to @review.game.name, @review.game %>
</p>

<p>
  <strong>Total:</strong>
  <%= total_avg(@review) %>
</p>

<% unless @review.link == "" %>
<p>
  <strong>Link:</strong>
  <%= link_to '외부리뷰 바로가기', @review.link, target: "_blank" %>
</p>
<% end %>
<p>
  <strong>Comments:</strong>
  <%= simple_format(@review.comments) %>
</p>

<% if @user.id == @review.user_id %>
<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Destroy', @review, method: :delete, data: { confirm: 'Are you sure?' } %> | 
<% end %>
<%= link_to 'Back', reviews_path %>

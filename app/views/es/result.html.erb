<h3><%= @keyword %> 의 검색 결과</h3>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Brand</th>
      <th>Sellday</th>
      <th>Model</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %></td>
        <td><%= link_to game.brand.name, game.brand %></td>
        <td><%= game.sellday %></td>
        <td><%= game.model %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @games %>
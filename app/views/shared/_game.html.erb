<% if @games.size != 0 %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Furigana</th>
      <th>Sellday</th>
      <th>Model</th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.name, game %></td>
        <td><%= game.furigana %></td>
        <td><%= game.sellday %></td>
        <td><%= game.model %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
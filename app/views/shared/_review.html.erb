<% if @reviews.size != 0 %>
<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>User</th>
      <th>Game</th>
      <th>Score</th>
      <th>Total</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= link_to review.user.name, "/user?id=#{review.user_id}" %></td>
        <td><%= link_to review.game.name, review %></td>
        <td><%= total_avg(review) %></td>
        <td><%= review.created_at.strftime("%y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br><% else %>
게임 리뷰를 해보세요!
<% end %>